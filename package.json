{
  "name": "finances-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/gabriel-amorim1/finances-backend.git",
  "author": "Gabriel Amorim <therealamorim@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run copy:doc",
    "copy:doc": "cp -r ./src/routes/doc/definitionsData ./dist/routes/doc/",
    "start": "node dist/server.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -T src/server.ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "m:run": "npm run typeorm migration:run",
    "m:drop": "npm run typeorm schema:drop",
    "m:generate": "npm run typeorm migration:generate -- -n",
    "clean-database": "npm run typeorm schema:drop && npm run typeorm migration:run",
    "tdd": "npx jest --verbose=true --onlyChanged --watch"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.9.2",
    "jsonwebtoken": "^8.5.1",
    "jwt-promisify": "^1.1.3",
    "moment": "^2.29.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "5.0.0",
    "swagger-jsdoc": "^6.0.1",
    "swagger-ui-express": "^4.1.6",
    "tsyringe": "^4.4.0",
    "typeorm": "^0.2.30",
    "uuid": "^8.3.2",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/sinon": "^9.0.10",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^6.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.11",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pre-push": "^0.1.1",
    "prettier": "^2.2.1",
    "sinon": "^9.2.3",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "pre-push": {
    "silent": true,
    "run": [
      "build",
      "test"
    ]
  }
}
